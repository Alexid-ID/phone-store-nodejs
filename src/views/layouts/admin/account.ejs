<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head.ejs', {title: title}); %>
    <link href="/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link href="/css/vendor/responsive.bootstrap4.css" rel="stylesheet" type="text/css"/>
</head>

<body
        class="loading"
        data-layout-config='{"leftSideBarTheme":"dark","layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":false, "showRightSidebarOnStart": true}'
>
<!-- Begin page -->
<div class="wrapper">
    <!-- ========== Left Sidebar Start ========== -->
    <%- include('../../partials/left_sidebar.ejs') %>
    <!-- Left Sidebar End -->

    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="content-page">
        <div class="content">
            <!-- Topbar Start -->
            <%- include('../../partials/topbar.ejs', {currentUser: user }) %>
            <!-- end Topbar -->

            <!-- Start Content-->
            <div class="container-fluid">
                <!-- start page title -->
                <div class="row mb-2 mt-3">
                    <div class="col-md-12">
                        <p>
                            <a
                                    class="btn btn-primary"
                                    data-toggle="collapse"
                                    href="#collapseExample"
                                    aria-expanded="false"
                                    aria-controls="collapseExample"
                            >
                                Add New Account
                            </a>
                        </p>
                        <div class="collapse" id="collapseExample">
                            <div class="card card-body mb-0 pt-1">
                                <form class="needs-validation" novalidate id="registerForm">
                                    <div class="form-row">
                                        <div class="form-group col-md-3 mb-0">
                                            <label for="fullname" class="col-form-label">Full Name</label>
                                            <input
                                                    name="fullname"
                                                    type="text"
                                                    class="form-control"
                                                    id="fullname"
                                                    placeholder="Full Name"
                                                    required
                                            />
                                        </div>
                                        <div class="form-group col-md-3 mb-0">
                                            <label for="email" class="col-form-label">Email</label>
                                            <input
                                                    name="email"
                                                    type="email"
                                                    class="form-control"
                                                    id="email"
                                                    placeholder="Email"
                                                    required
                                            />
                                        </div>
                                        <!-- select role ADMIN or EMPLOYEE -->
                                        <div class="form-group col-md-3 mb-0">
                                            <label for="role" class="col-form-label">Role</label>
                                            <select name="role" id="role" class="form-control" required>
                                                <option>Select Role</option>
                                                <option value="ADMIN">ADMIN</option>
                                                <option value="EMPLOYEE">EMPLOYEE</option>
                                            </select>
                                        </div>
                                        <div
                                                class="col-md-3 d-flex flex-row align-items-end justify-content-end"
                                        >
                                            <button type="submit" class="btn-submit btn btn-success w-100">
                                                Register
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Account table -->
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table
                                            class="mb-0 table table-centered dt-responsive nowrap w-100"
                                            id="accounts-datatable"
                                    >
                                        <thead>
                                        <tr>
                                            <th>Employee</th>
                                            <th>Email</th>
                                            <th>Role</th>
                                            <th>Create Date</th>
                                            <th>Is Active</th>
                                            <th>Is Locked</th>
                                            <th>Status</th>
                                            <th>Block</th>
                                            <th>Resend</th>
                                        </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                            <!-- end card-body-->
                        </div>
                        <!-- end card-->
                    </div>
                    <!-- end col -->
                </div>
            </div>
            <!-- container -->
        </div>
        <!-- content -->

        <!-- Footer Start -->
        <%- include('../../partials/footer.ejs') %>
        <!-- end Footer -->
    </div>

    <!-- Warning Header Modal -->
    <div
            id="confirmBlockAccountModal"
            class="modal fade"
            tabindex="-1"
            role="dialog"
            aria-labelledby="danger-header-modalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-danger">
                    <h4 class="modal-title" id="danger-header-modalLabel">Confirm block/unlock account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger btn-confirm">Confirm</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- Toast Message -->
    <div class="toast-container"></div>
    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->
</div>
<!-- END wrapper -->

<script src="/js/vendor.min.js"></script>
<script src="/js/app.min.js"></script>

<!-- third party js -->
<script src="/js/vendor/jquery.dataTables.min.js"></script>
<script src="/js/vendor/dataTables.bootstrap4.js"></script>
<script src="/js/vendor/dataTables.responsive.min.js"></script>
<script src="/js/vendor/responsive.bootstrap4.min.js"></script>
<script src="/js/vendor/dataTables.checkboxes.min.js"></script>
<!-- third party js ends -->

<!-- demo app -->

<script src="/js/main/admin/account.js"></script>
<script src="/js/main/auth/logout.js"></script>
</body>
</html>
