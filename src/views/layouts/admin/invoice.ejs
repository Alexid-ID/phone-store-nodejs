<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head.ejs', {title: title}); %>
    <link href="/css/vendor/dataTables.bootstrap4.css" rel="stylesheet" type="text/css"/>
    <link href="/css/vendor/responsive.bootstrap4.css" rel="stylesheet" type="text/css"/>
</head>

<body
        class="loading"
        data-layout-config='{"leftSideBarTheme":"dark","layoutBoxed":false, "leftSidebarCondensed":false, "leftSidebarScrollable":false,"darkMode":false, "showRightSidebarOnStart": true}'
>
<!-- Begin page -->
<div class="wrapper">
    <!-- ========== Left Sidebar Start ========== -->
    <%- include('../../partials/left_sidebar.ejs') %>
    <!-- Left Sidebar End -->

    <!-- ============================================================== -->
    <!-- Start Page Content here -->
    <!-- ============================================================== -->

    <div class="content-page">
        <div class="content">
            <!-- Topbar Start -->
            <input type="hidden" id="currentUser" data-role="<%= user.role === 'ADMIN' ? 'admin' : 'employee' %>">
            <%- include('../../partials/topbar.ejs', {currentUser: user }) %>
            <!-- end Topbar -->

            <!-- Start Content-->
            <div class="container-fluid">

                <!-- start page title -->
                <div class="row">
                    <div class="col-12">
                        <div class="page-title-box">
                            <div class="page-title-right">
                                <ol class="breadcrumb m-0">
                                    <li class="breadcrumb-item"><a href="/admin">EI POS</a></li>
                                    <li class="breadcrumb-item active">Orders</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Orders</h4>
                        </div>
                    </div>
                </div>
                <!-- end page title -->

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover table-centered w-100 dt-responsive nowrap"
                                           id="invoices-datatable">
                                        <thead class="thead-light">
                                        <tr>
                                            <th class="all">Order ID</th>
                                            <th>Added Date</th>
                                            <th>Employee Name</th>
                                            <th>Customer Name</th>
                                            <th>Total</th>
                                            <th style="width: 85px">Action</th>
                                        </tr>
                                        </thead>
                                    </table>
                                </div>

                            </div> <!-- end card-body-->
                        </div> <!-- end card-->
                    </div> <!-- end col -->
                </div>
                <!-- end row -->

            </div> <!-- container -->

            <!-- container -->
        </div>
        <!-- content -->

        <!-- Footer Start -->
        <%- include('../../partials/footer.ejs') %>
        <!-- end Footer -->
    </div>

    <!-- Warning Header Modal -->
    <div
            id="confirmBlockAccountModal"
            class="modal fade"
            tabindex="-1"
            role="dialog"
            aria-labelledby="danger-header-modalLabel"
            aria-hidden="true"
    >
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header modal-colored-header bg-danger">
                    <h4 class="modal-title" id="danger-header-modalLabel">Confirm block/unlock account</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger btn-confirm">Confirm</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

    <!-- Toast Message -->
    <div class="toast-container"></div>
    <!-- ============================================================== -->
    <!-- End Page content -->
    <!-- ============================================================== -->
</div>
<!-- END wrapper -->

<script src="/js/vendor.min.js"></script>
<script src="/js/app.min.js"></script>

<!-- third party js -->
<script src="/js/vendor/jquery.dataTables.min.js"></script>
<script src="/js/vendor/dataTables.bootstrap4.js"></script>
<script src="/js/vendor/dataTables.responsive.min.js"></script>
<script src="/js/vendor/responsive.bootstrap4.min.js"></script>
<script src="/js/vendor/dataTables.checkboxes.min.js"></script>
<!-- third party js ends -->

<!-- demo app -->

<script src="/js/main/admin/invoice.js"></script>
<script src="/js/main/auth/logout.js"></script>

</body>
</html>
