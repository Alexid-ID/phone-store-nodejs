<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/employee/head.ejs') %>
    <link rel="stylesheet" href="/css/employee/product.css"/>
</head>
<body>
<div class="container-fluid p-0 m-0">
    <!-- Start sidebar -->
    <%- include('../../partials/employee/sidebar.ejs', { active: 'product' }) %>
    <!-- End sidebar -->

    <div class="main-content" style="background-color: #fff">
        <!-- Start header -->
        <%- include('../../partials/employee/header.ejs', { search: false, currentUser: user }) %>
        <!-- End header -->

        <!-- START MAIN CONTENT -->
        <!-- code content here... -->
        <div class="row m-0 p-0">
            <div class="col-12 search-product-container">
                <form id="search" class="d-flex align-items-center my-3">
                    <div class="input-group me-3">
                        <input type="text" class="form-control" placeholder="Enter keyword" aria-label="keyword"
                               aria-describedby="keyword" name="keyword" required="">
                    </div>
                    <button type="submit" class="btn btn-primary d-flex align-items-center px-4" id="search-btn">
                        <i class="bx bx-search-alt" style="font-size: 1.6rem;"></i>
                    </button>
                </form>
                <div class="search-error"></div>
            </div>
            <div class="col-12 d-flex gap-3 my-3">
                <h3 class="d-inline">Product</h3>
                <div id="categories-datatable" class="col-12"></div>
            </div>
            <div id="products-datatable" class="col-12"></div>
        </div>

        <!-- END MAIN CONTENT -->
    </div>
</div>
</body>

