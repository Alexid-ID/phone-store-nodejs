<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/employee/head.ejs') %>
    <link rel="stylesheet" href="/css/employee/product.css"/>
</head>
<body>
<div class="container-fluid p-0 m-0">
    <!-- Start sidebar -->
    <%- include('../../partials/employee/sidebar.ejs', { active: 'product' }) %>
    <!-- End sidebar -->

    <div class="main-content" style="background-color: #fff">
        <!-- Start header -->
        <%- include('../../partials/employee/header.ejs', { search: false, currentUser: user }) %>
        <!-- End header -->

        <!-- START MAIN CONTENT -->
        <!-- code content here... -->
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="/employee">EI POS</a></li>
                                <li class="breadcrumb-item">
                                    <a href="/employee/product">Product</a>
                                </li>
                                <li class="breadcrumb-item active">Product Details</li>
                            </ol>
                        </div>
                        <h4 class="page-title">Product Details</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-5">
                                    <!-- Product image -->
                                    <a href="javascript: void(0);" class="text-center d-block mb-4">
                                        <img
                                                src="<% if(product) { %><%= product.image %><% } %>"
                                                class="img-fluid"
                                                style="max-width: 280px"
                                                alt="Product-img"
                                        />
                                    </a>
                                </div>
                                <!-- end col -->
                                <div class="col-lg-7">
                                    <form class="pl-lg-4">
                                        <!-- Product title -->
                                        <h3 class="mt-0">
                                            <% if(product) { %> <%= product.name %>
                                            <% } %>
                                        </h3>
                                        <p class="mb-1">
                                            Added Date:
                                            <% if(product) { %> <%= new
                                            Date(product.createdAt).toLocaleDateString() %>
                                            <% } %>
                                        </p>

                                        <!-- Product stock -->
                                        <div class="mt-3">
                                            <h4>
                                                <span class="badge badge-success-lighten">Instock</span>
                                            </h4>
                                        </div>

                                        <!-- Product description -->
                                        <div class="mt-4 d-flex" style="gap: 1.6rem">
                                            <div>
                                                <h6 class="font-14">Retail Price:</h6>
                                                <h3>
                                                    <% if(product) { %> <%= new Intl.NumberFormat("vi-VN", {
                                                        style: "currency", currency: "VND"
                                                    }).format(product.retailPrice) %>
                                                    <% } %>
                                                </h3>
                                            </div>
                                            <div>
                                                <h6 class="font-14">Quantity</h6>
                                                <div class="d-flex">
                                                    <input
                                                            type="number"
                                                            min="1"
                                                            value="<% if (product) { %><%= parseInt(product.quantity) %><% } %>"
                                                            class="form-control"
                                                            placeholder="Qty"
                                                            style="width: 90px"
                                                            disabled
                                                    />
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Product description -->
                                        <div class="mt-4">
                                            <h6 class="font-14">Description:</h6>
                                            <% if(product) { %>
                                                <% product.description.split('\n').forEach(function (text) { %>
                                                    <p><%= text %></p>
                                                <% }) %>
                                            <% } %>
                                        </div>

                                    </form>
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row-->

                        </div>
                        <!-- end card-body-->
                    </div>
                    <!-- end card-->
                </div>
                <!-- end col-->
            </div>
            <!-- end row-->
        </div>

        <!-- END MAIN CONTENT -->
    </div>
</div>
</body>

<script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
        integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
></script>
<script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"
></script>
<script src="/js/main/employee/product.js"></script>
<script src="/js/main/employee/sidebar.js"></script>
<script src="/js/main/auth/logout.js"></script>
</html>
