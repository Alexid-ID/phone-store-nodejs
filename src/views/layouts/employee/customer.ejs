                                        class="table table-centered w-100 dt-responsive nowrap"
                                        id="customer-datatable"
                                >
                                    <thead class="thead-light">
                                    <tr>
                                        <th class="all">Name</th>
                                        <th>Phone Number</th>
                                        <th>Addres</th>
                                        <th>Created Date</th>
                                        <th style="width: 85px">Action</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <!-- end card-body-->
                    </div>
                    <!-- end card-->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>

        <!-- END MAIN CONTENT -->
    </div>
</div>
